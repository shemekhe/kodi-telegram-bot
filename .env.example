# Telegram API / Bot details
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_BOT_TOKEN=123456:bot_token_from_botfather

# Kodi configuration
KODI_URL=http://localhost:8080/jsonrpc
KODI_USERNAME=kodi
KODI_PASSWORD=your_password_here

# File system
DOWNLOAD_DIR=~/Downloads
ORGANIZE_MEDIA=1            # 1 (default) = organize into Movies/Series/Other, set 0 to disable

# Optional settings
MAX_RETRY_ATTEMPTS=3
MAX_CONCURRENT_DOWNLOADS=5

# Resource thresholds
MIN_FREE_DISK_MB=200
DISK_WARNING_MB=500
MEMORY_WARNING_PERCENT=90

# Logging (optional overrides)
# LOG_FILE=bot.log
# LOG_LEVEL=INFO            # DEBUG / INFO / WARNING / ERROR
# LOG_MAX_MB=200            # Max log size before in-place truncation